# Last.fm Configuration
# Get your API key at: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_USERNAME=your_lastfm_username_here

# Slack Configuration
# Create a Slack App and get a User OAuth Token with 'users.profile:write' scope
# Instructions: https://api.slack.com/apps
SLACK_USER_TOKEN=xoxp-your-slack-user-token-here

# Optional: Polling interval in seconds (default: 30)
POLL_INTERVAL=30

# Optional: Status emoji (default: :musical_note:)
STATUS_EMOJI=:musical_note:

# Optional: Clear status when not playing (default: true)
CLEAR_WHEN_NOT_PLAYING=true
